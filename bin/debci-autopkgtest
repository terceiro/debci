#!/bin/sh

set -eu

if [ $# -lt 1 ]; then
  echo "usage: $0 [AUTOPKGTEST ARGUMENTS ...]"
  exit 1
fi

args="$(echo $@)"
rc=0
autopkgtest \
  --no-built-binaries \
  --setup-commands="echo --no-built-binaries ${debci_autopkgtest_args} ${args} > /var/tmp/debci-autopkgtest.args" \
  ${debci_autopkgtest_args:-} \
  "$@" || rc=$?

if [ -n "${debci_test_outputdir:-}" ]; then
  echo $rc > "$debci_test_outputdir/exitcode"
fi
exit $rc
