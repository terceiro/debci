<div class='row'>
  <div class='col-md-12'>
    <h1 class='page-header'>Status <small>/ Alerts</small></h1>
    <%= @status_nav %>

    <h4>There are currently <b><%= @alert_number %></b> packages with status alerts.</h4>

    <% if not @tmpfail.empty? %>
      <table class='table table-striped'>
        <tr>
          <th>Package</th>
          <th>Suite</th>
          <th>Architecture</th>
          <th>Status</th>
        </tr>

      <% @tmpfail.each do |package| %>
        <% package.tmpfail.select(&:visible?).each do |s| %>
          <tr>
            <td>
              <a href="/packages/<%= package.prefix %>/<%= package.name %>"><%= package.name %></a>
            </td>

            <td>
                <%= s.suite %>
            </td>
            <td>
                <%= s.architecture %>
            </td>
            <td>
              <a class='tmpfail' href='/packages/<%= package.prefix %>/<%= package.name %>/<%= s.suite %>/<%= s.architecture %>/'><%= s.version %> <%= s.status %></a>
            </td>
          </tr>
        <% end %>
      <% end %>
      </table>
    <% end %>

  </div> <!-- class='col-md-12' -->
</div> <!-- class='row' -->
